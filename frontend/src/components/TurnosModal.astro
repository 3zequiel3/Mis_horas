---
/**
 * Modal para gestionar horarios por turnos (ma√±ana/tarde)
 * Se usa en el tablero de empleados cuando modo_horarios='turnos'
 */
---

<div id="turnos-modal" class="modal-overlay" style="display: none;">
  <div class="modal-content turnos-modal">
    <div class="modal-header">
      <div>
        <h2>‚è∞ Gestionar Turnos</h2>
        <p class="modal-subtitle"><span id="modal-empleado-nombre"></span> - <span id="modal-fecha"></span></p>
      </div>
      <button class="modal-close" id="close-turnos-modal">&times;</button>
    </div>

    <div class="modal-body">
      <form id="turnos-form">
        <input type="hidden" id="modal-dia-id" />

        <!-- Turno Ma√±ana -->
        <div class="turno-section">
          <h3>üåÖ Turno Ma√±ana</h3>
          <div class="time-inputs">
            <div class="time-group">
              <label for="turno_manana_entrada">Entrada</label>
              <input 
                type="time" 
                id="turno_manana_entrada" 
                name="turno_manana_entrada"
              />
            </div>
            <div class="time-group">
              <label for="turno_manana_salida">Salida</label>
              <input 
                type="time" 
                id="turno_manana_salida" 
                name="turno_manana_salida"
              />
            </div>
          </div>
          <p class="subtotal">Subtotal: <span id="subtotal-manana">0:00</span></p>
        </div>

        <!-- Turno Tarde -->
        <div class="turno-section">
          <h3>üåÜ Turno Tarde</h3>
          <div class="time-inputs">
            <div class="time-group">
              <label for="turno_tarde_entrada">Entrada</label>
              <input 
                type="time" 
                id="turno_tarde_entrada" 
                name="turno_tarde_entrada"
              />
            </div>
            <div class="time-group">
              <label for="turno_tarde_salida">Salida</label>
              <input 
                type="time" 
                id="turno_tarde_salida" 
                name="turno_tarde_salida"
              />
            </div>
          </div>
          <p class="subtotal">Subtotal: <span id="subtotal-tarde">0:00</span></p>
        </div>

        <!-- Total y Horas Extras -->
        <div class="totales-section">
          <div class="total-row">
            <span class="total-label">Total Horas:</span>
            <span class="total-value" id="total-horas">0:00</span>
          </div>
          <div class="extras-row" id="extras-row" style="display: none;">
            <span class="extras-label">Horas Extras:</span>
            <span class="extras-value" id="horas-extras">+0:00</span>
          </div>
        </div>

        <div class="modal-actions">
          <button type="submit" class="btn btn-primary">Guardar</button>
          <button type="button" class="btn btn-secondary" id="cancel-turnos-modal">Cancelar</button>
        </div>
      </form>
    </div>
  </div>
</div>

<style>
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.75);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  backdrop-filter: blur(4px);
}

.turnos-modal {
  background: var(--bg-primary);
  border-radius: 16px;
  width: 90%;
  max-width: 600px;
  max-height: 90vh;
  display: flex;
  flex-direction: column;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 1.5rem;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  flex-shrink: 0;
}

.modal-header h2 {
  margin: 0 0 0.25rem 0;
  font-size: 1.5rem;
  color: var(--text-primary);
}

.modal-subtitle {
  margin: 0;
  font-size: 0.9rem;
  color: var(--text-secondary);
  font-weight: 400;
}

.modal-close {
  background: none;
  border: none;
  font-size: 2rem;
  color: var(--text-secondary);
  cursor: pointer;
  line-height: 1;
  padding: 0;
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: color 0.3s ease;
}

.modal-close:hover {
  color: var(--text-primary);
}

.modal-body {
  padding: 1.5rem;
  overflow-y: auto;
  flex: 1;
}

.turno-section {
  background: rgba(255, 255, 255, 0.03);
  border: 1px solid rgba(255, 255, 255, 0.08);
  border-radius: 12px;
  padding: 1.25rem;
  margin-bottom: 1.25rem;
}

.turno-section h3 {
  margin: 0 0 1rem 0;
  font-size: 1.1rem;
  color: var(--text-primary);
}

.time-inputs {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1rem;
  margin-bottom: 1rem;
}

.time-group {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.time-group label {
  font-size: 0.9rem;
  color: var(--text-secondary);
  font-weight: 500;
}

.time-group input[type="time"] {
  padding: 0.75rem;
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 8px;
  background: rgba(255, 255, 255, 0.05);
  color: var(--text-primary);
  font-size: 1rem;
  font-family: inherit;
  transition: all 0.3s ease;
}

.time-group input[type="time"]:focus {
  outline: none;
  border-color: #667eea;
  background: rgba(102, 126, 234, 0.1);
  box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
}

.subtotal {
  margin: 0;
  text-align: right;
  font-size: 0.95rem;
  color: var(--text-secondary);
}

.subtotal span {
  font-weight: 600;
  color: var(--text-primary);
}

.totales-section {
  background: rgba(102, 126, 234, 0.1);
  border: 1px solid rgba(102, 126, 234, 0.2);
  border-radius: 12px;
  padding: 1.25rem;
  margin-bottom: 1.5rem;
}

.total-row,
.extras-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0.75rem;
}

.total-row:last-child,
.extras-row:last-child {
  margin-bottom: 0;
}

.total-label,
.extras-label {
  font-size: 1rem;
  color: var(--text-secondary);
}

.total-value {
  font-size: 1.5rem;
  font-weight: 700;
  color: #667eea;
}

.extras-row {
  padding-top: 0.75rem;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.extras-value {
  font-size: 1.25rem;
  font-weight: 600;
  color: #4caf50;
}

.modal-actions {
  display: flex;
  gap: 1rem;
  flex-shrink: 0;
}

.btn {
  flex: 1;
  padding: 0.875rem 1.5rem;
  border: none;
  border-radius: 8px;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
}

.btn-secondary {
  background: rgba(255, 255, 255, 0.1);
  color: var(--text-primary);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.btn-secondary:hover {
  background: rgba(255, 255, 255, 0.15);
}

@media (max-width: 640px) {
  .turnos-modal {
    width: 95%;
    max-height: 95vh;
  }

  .time-inputs {
    grid-template-columns: 1fr;
  }

  .modal-actions {
    flex-direction: column;
  }
}
</style>
