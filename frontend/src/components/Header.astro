---
import Notificaciones from './Notificaciones.astro';

interface Props {
  children?: string;
}

const { children } = Astro.props;
---

<header class="header">
  <nav class="navbar">
    <div class="container navbar-content">
      <div class="nav-brand">
        <h1>⏱️ TimeFlow</h1>
      </div>
      
      <button class="hamburger-toggle" aria-label="Toggle menu">
        <span></span>
        <span></span>
        <span></span>
      </button>

      <div class="nav-menu">
        <a href="/dashboard" class="nav-link">Dashboard</a>
        <a href="/proyectos" class="nav-link">Proyectos</a>
        <button id="open-nuevo-proyecto-modal" class="nav-link nav-link-primary">+ Nuevo</button>
        <Notificaciones />
        <a href="/perfil" class="nav-link">Perfil</a>
        <button id="logout-btn" class="btn btn-danger btn-sm">Cerrar Sesión</button>
      </div>
    </div>
  </nav>
</header>

<style>
  .header {
    background: linear-gradient(135deg, var(--bg-primary) 0%, var(--bg-secondary) 100%);
    color: white;
    padding: 1rem 0;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    margin-bottom: 2rem;
    border-bottom: 2px solid rgba(102, 126, 234, 0.3);
  }

  .navbar {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .navbar-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
  }

  .nav-brand h1 {
    margin: 0;
    font-size: 1.5rem;
    color: #667eea;
    font-weight: 700;
  }
  
  .nav-brand h1::first-letter {
    /* Mantener emojis visibles */
    background: none;
    -webkit-text-fill-color: currentColor;
  }

  .nav-menu {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }

  .nav-link {
    color: var(--text-secondary);
    text-decoration: none;
    transition: all 0.2s ease;
    font-weight: 500;
    position: relative;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    transition: width 0.3s ease;
  }

  .nav-link:hover {
    color: var(--text-primary);
  }

  .nav-link:hover::after {
    width: 100%;
  }

  .nav-link-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white !important;
    padding: 0.5rem 1.25rem;
    border-radius: 6px;
    position: relative;
    border: none;
    cursor: pointer;
    font-weight: 500;
    font-family: inherit;
    font-size: inherit;
  }

  .nav-link-primary::after {
    display: none;
  }

  .nav-link-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(102, 126, 234, 0.3);
  }

  /* Hamburger Menu */
  .hamburger-toggle {
    display: none;
    flex-direction: column;
    gap: 4px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    z-index: 1001;
  }

  .hamburger-toggle span {
    display: block;
    width: 25px;
    height: 3px;
    background: var(--text-primary);
    border-radius: 3px;
    transition: all 0.3s ease;
  }

  .hamburger-toggle.active span:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  .hamburger-toggle.active span:nth-child(2) {
    opacity: 0;
  }

  .hamburger-toggle.active span:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -6px);
  }

  @media (max-width: 768px) {
    .hamburger-toggle {
      display: flex;
    }

    .navbar-content {
      position: relative;
    }

    .nav-menu {
      position: fixed;
      top: 0;
      right: -100%;
      width: 280px;
      height: 100vh;
      background: linear-gradient(135deg, var(--bg-primary) 0%, var(--bg-secondary) 100%);
      flex-direction: column;
      gap: 0;
      padding: 5rem 0 2rem 0;
      box-shadow: -5px 0 20px rgba(0, 0, 0, 0.5);
      transition: right 0.3s ease;
      z-index: 1000;
      overflow-y: auto;
    }

    .nav-menu.active {
      right: 0;
    }

    .nav-link {
      width: 100%;
      text-align: left;
      padding: 1rem 2rem;
      border-bottom: 1px solid rgba(255, 255, 255, 0.05);
      transition: all 0.2s ease;
    }

    .nav-link::after {
      display: none;
    }

    .nav-link:hover {
      background: rgba(102, 126, 234, 0.1);
      padding-left: 2.5rem;
    }

    .nav-link-primary {
      margin: 1rem 2rem;
      width: calc(100% - 4rem);
      text-align: center;
      padding: 0.75rem 1rem;
      border: none;
      cursor: pointer;
    }

    .nav-link-primary:hover {
      transform: translateY(0);
      padding-left: 1rem;
    }

    #logout-btn {
      margin: 1rem 2rem;
      width: calc(100% - 4rem);
    }

    .nav-brand h1 {
      font-size: 1.25rem;
    }
  }
</style>

<script>
  import { AlertUtils } from '../utils/swal';
  import { authHandlers } from '../handlers/auth';
  import { initHamburgerMenu } from '../utils/hamburger';

  // Inicializar menú hamburguesa
  initHamburgerMenu();

  document.getElementById('logout-btn')?.addEventListener('click', async () => {
    const result = await AlertUtils.confirm(
      '¿Cerrar Sesión?',
      'Serás desconectado de tu cuenta',
      'Sí, cerrar sesión',
      'Cancelar'
    );

    if (result.isConfirmed) {
      try {
        await authHandlers.logout();
      } catch (error) {
        console.error('Error al cerrar sesión:', error);
        await AlertUtils.error('Error', 'No se pudo cerrar la sesión');
      }
    }
  });
</script>
