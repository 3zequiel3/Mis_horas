---
import '../styles/global.css';
import '../styles/modales.css';
import NuevoProyectoModal from '../components/NuevoProyectoModal.astro';

export interface Props {
  title?: string;
}

const { title = 'Mis Horas' } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} - Mis Horas</title>
  </head>
  <body>
    <slot />
    <NuevoProyectoModal />
  </body>
</html>
