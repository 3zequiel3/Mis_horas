---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/auth.css';

const pageTitle = 'Iniciar Sesión';
---

<BaseLayout title={pageTitle}>
  <div class="container login-container">
    <div class="login-card">
      <div class="login-header">
        <h2>Bienvenido</h2>
        <p>Inicia sesión para continuar</p>
      </div>
      
      <form id="login-form" class="form">
        <div class="form-group">
          <label for="username">Usuario o Email</label>
          <input type="text" id="username" name="username" placeholder="tu@email.com" required />
        </div>

        <div class="form-group">
          <label for="password">Contraseña</label>
          <input type="password" id="password" name="password" placeholder="••••••••" required />
        </div>

        <div class="form-group checkbox-group">
          <input type="checkbox" id="remember-me" name="remember-me" />
          <label for="remember-me">Mantener mi sesión iniciada</label>
        </div>

        <button type="submit" class="btn btn-primary btn-full">Iniciar Sesión</button>
      </form>

      <div class="divider">o</div>

      <p class="text-center">
        ¿No tienes cuenta? <a href="/register" class="link-primary">Regístrate aquí</a>
      </p>

      <div id="error-message"></div>
    </div>
  </div>
</BaseLayout>

<style>
  .checkbox-group {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin: 1rem 0;
  }

  .checkbox-group input[type="checkbox"] {
    width: 18px;
    height: 18px;
    cursor: pointer;
  }

  .checkbox-group label {
    margin: 0;
    font-size: 0.95rem;
    cursor: pointer;
    flex: 1;
  }
</style>

<script>
  import { AuthService } from '../services/auth';
  import { LoginHandler } from '../handlers/login';

  // Si está logueado, redirigir al dashboard
  if (AuthService.isAuthenticated()) {
    window.location.href = '/dashboard';
  }

  // Manejar envío del formulario
  document.getElementById('login-form')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    await LoginHandler.login();
  });
</script>
