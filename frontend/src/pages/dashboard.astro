---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import ProtectedRoute from '../components/ProtectedRoute.astro';
import '../styles/dashboard.css';

const pageTitle = 'Dashboard - Mis Horas';
---

<BaseLayout title={pageTitle}>
  <ProtectedRoute>
    <Header />
    <div class="container">
      <div class="dashboard">
        <h1>ðŸ“Š Dashboard</h1>
        
        <div class="stats-grid grid grid-cols-4">
          <div class="stat-card card">
            <div class="stat-label">Proyectos Activos</div>
            <div class="stat-value" id="proyectos-count">0</div>
          </div>
          <div class="stat-card card">
            <div class="stat-label">Horas Totales</div>
            <div class="stat-value" id="total-hours">0h</div>
          </div>
          <div class="stat-card card">
            <div class="stat-label">Horas Esta Semana</div>
            <div class="stat-value" id="week-hours">0h</div>
          </div>
          <div class="stat-card card">
            <div class="stat-label">Promedio Diario</div>
            <div class="stat-value" id="avg-hours">0h</div>
          </div>
        </div>

        <div class="mt-4">
          <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
            <h2>ðŸ“‹ Mis Proyectos</h2>
            <a href="/proyectos" style="color: #667eea; text-decoration: none; font-weight: 600;">Ver todos â†’</a>
          </div>
          <div id="proyectos-container" class="projects-grid grid grid-cols-3">
            <div class="loading">Cargando proyectos...</div>
          </div>
        </div>

        <div id="error-message"></div>
      </div>
    </div>
  </ProtectedRoute>
</BaseLayout>

